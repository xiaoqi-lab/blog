---
import { SITE_TITLE } from '../consts';
import { getTranslation } from '../i18n/index';

const lang = Astro.props.lang || 'en';
const t = getTranslation(lang);
const today = new Date();
const currentYear = today.getFullYear();
---

<footer class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-16">
    <div class="space-y-2 mb-12">
      <div
        class="h-0.5 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="1000">
      </div>
      <h3
        class="text-secondary text-xs font-medium"
        data-aos="fade-up"
        data-aos-duration="1500">
        <span>{t.footer.seeYou}</span>
      </h3>
      <div
        class="h-1.5 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="2000">
      </div>
      <div class="h-3 bg-secondary" data-aos="fade-up" data-aos-duration="2500">
      </div>
      <div class="h-6 bg-secondary" data-aos="fade-up" data-aos-duration="3000">
      </div>
      <div
        class="h-12 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="3000">
      </div>
      <div
        class="h-24 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="3000"
        data-aos-delay="150">
      </div>
    </div>
    
    <div class="flex flex-col md:flex-row justify-between items-center gap-6 text-secondary">
      <div class="text-center md:text-left">
        <p class="text-sm">
          &copy; {currentYear} {SITE_TITLE}. {t.footer.copyright}
        </p>
        <p class="text-xs text-secondary/60 mt-2">
          {t.footer.builtWith} <a href="https://astro.build" target="_blank" class="hover:text-secondary underline">Astro</a> & <a href="https://tailwindcss.com" target="_blank" class="hover:text-secondary underline">Tailwind CSS</a>
        </p>
      </div>
      
      <div class="flex flex-col md:flex-row items-center gap-6">
        <nav class="flex gap-4 text-xs">
          <a href={lang === 'en' ? '/' : '/zh'} class="hover:text-secondary/80 transition-colors">{t.nav.home}</a>
          <a href={lang === 'en' ? '/blog' : '/zh/blog'} class="hover:text-secondary/80 transition-colors">{t.nav.blog}</a>
          <a href={lang === 'en' ? '/about' : '/zh/about'} class="hover:text-secondary/80 transition-colors">{t.nav.about}</a>
        </nav>
        
        <div class="flex gap-4">
          <a 
            href="https://github.com/xiaoqi-lab" 
            target="_blank"
            rel="noopener noreferrer"
            class="text-secondary hover:text-secondary/80 transition-colors"
            aria-label="GitHub"
          >
            <svg viewBox="0 0 16 16" width="20" height="20" fill="currentColor">
              <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
            </svg>
          </a>
          <a 
            href="https://x.com/777ontheway" 
            target="_blank"
            rel="noopener noreferrer"
            class="text-secondary hover:text-secondary/80 transition-colors"
            aria-label="X (Twitter)"
          >
            <svg viewBox="0 0 16 16" width="20" height="20" fill="currentColor">
              <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"/>
            </svg>
          </a>
          <a 
            href="mailto:xiaoqi777.zhang@gmail.com" 
            class="text-secondary hover:text-secondary/80 transition-colors"
            aria-label="Email"
          >
            <svg viewBox="0 0 16 16" width="20" height="20" fill="currentColor">
              <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <div class="mt-12 text-center">
      <p class="text-xs text-secondary/60">
        1997-2025 â˜º
      </p>
    </div>
  </div>
</footer>
